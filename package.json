{
  "name": "rp-sistems-desktop",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio para RP-SISTEMS",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "desktop",
    "radio",
    "communication"
  ],
  "author": "RP-SISTEMS Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.rp-sistems.desktop",
    "productName": "RP-SISTEMS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**/*",
      "build/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
